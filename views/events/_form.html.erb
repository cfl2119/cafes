<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= f.date_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.date_select :end %>
  </div>

  <div class="field">
    Suggested Cafes: <br /><br/>
    <% Cafe.all.each do |cafe| %>
        <%= cafe.name %> <!--this is the label for the checkbox-->
	<%= check_box_tag :cafe_ids, cafe.id,
    @event.caves.include?(cafe), :name => 'event[cafe_ids][]'%><br />
	<% end %>
   </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
